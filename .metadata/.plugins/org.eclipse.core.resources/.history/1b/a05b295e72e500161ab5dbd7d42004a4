package org.usfirst.frc.team131.robot;

public class PortConstants {
	
	private static PortConstants instance = null;
	
	private final int[] portConstantsArray;
	
	private PortConstants(final boolean isRaftMode) {
		
		if (isRaftMode) {
			portConstants = new int[] {
					0,
					1,
					2
			};
		}
	}
	
	/**
	 * 
	 * @return the singleton instance
	 * 
	 * Notes:
	 *  true  =>  port constants are configured for raft mode
	 *  false =>  port constants are configured for use on the actual robot
	 */
	public PortConstants getInstance() {
		if (instance == null) {
			instance = new PortConstants(true);
		}
		
		return instance;
	}
	
	
	// analog constants
	static final int LEFT_SPEED_CONTROLLER_PORT = 0;
	static final int RIGHT_SPEED_CONTROLLER_PORT = 2;

	//static final int GEAR_FLOPPER_CONTROLLER_PORT = 2;
	static final int UPPER_GEAR_FLOPPER_LIMIT_SWITCH = 3;
	static final int LOWER_GEAR_FLOPPER_LIMIT_SWITCH = 4;

	static final int CLIMBER_PORT = 6;
	
	// digital constants
	static final int RIGHT_ENCODER_PORT_ONE = 0;
	static final int RIGHT_ENCODER_PORT_TWO = 1;
	static final int LEFT_ENCODER_PORT_ONE = 2;
	static final int LEFT_ENCODER_PORT_TWO = 3;
	
	static int RAFT_UPPER_PNEUMATIC_PUSHER = 5;
	static int RAFT_LOWER_PNEUMATIC_PUSHER = 6;
	
}
