package org.usfirst.frc.team131.robot;

import edu.wpi.first.wpilibj.DigitalInput;
import edu.wpi.first.wpilibj.Solenoid;
import edu.wpi.first.wpilibj.Victor;

public class GearFlopper {
	
	private static final PortConstants pc = PortConstants.getInstance();
	
	private Victor gearFlopper;
	private DigitalInput upperFlopperPosition;
	private DigitalInput lowerFlopperPosition;
	private Solenoid pusher;
	private Solenoid oppositePusher;
	
	private Solenoid otherPusher;
	private Solenoid oppositeOtherPusher;
	
	public GearFlopper ()  {
		
		pusher         =  new Solenoid(pc.get(pc.UPPER_PNEUMATIC_CHANNEL));
		oppositePusher = new Solenoid (pc.get(pc.LOWER_PNEUMATIC_CHANNEL));
		
		otherPusher = new Solenoid (5);
		oppositeOtherPusher = new Solenoid (6);
		//GearFlopper = new Victor (PortConstants.GEAR_FLOPPER_CONTROLLER_PORT);
		//UpperFlopperPosition = new DigitalInput (PortConstants.UPPER_GEAR_FLOPPER_LIMIT_SWITCH);
		//LowerFlopperPosition = new DigitalInput (PortConstants.LOWER_GEAR_FLOPPER_LIMIT_SWITCH);
	}
	
	public void turnOn()
	{
		pusher.set(true);
		oppositePusher.set(false);
	}
	
	public void turnOff()
	{
		pusher.set(false);
		oppositePusher.set(true);
	}
	
	public void turnOtherOn()
	{
		otherPusher.set(true);
		oppositeOtherPusher.set(false);
	}
	
	public void turnOtherOff()
	{
		otherPusher.set(false);
		oppositeOtherPusher.set(true);
	}
	
